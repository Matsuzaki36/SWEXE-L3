<% if @Tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
    <% @Tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @Tweet , url: {action: :create} do |f| %>
    <%= f.label :message, '本文' %><br>
    <%= f.text_area :message ,size: "60x15"%>
    <p>
        <%= f.label :image, '画像' %><br>
        <%= f.file_field :image %>
    </p>
    <br>
    <%= f.submit '投稿' %>
<% end %>